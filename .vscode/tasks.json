{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: debug (macOS)",
            "command": "clang++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/main.cpp",
                "${workspaceFolder}/src/**.cpp",
                "-I/opt/homebrew/Cellar/sfml/2.5.1_1/include",
                "-L/opt/homebrew/Cellar/sfml/2.5.1_1/lib",
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system",
                "-std=c++17",
                "-DMAC",
                "-o",
                "${workspaceFolder}/main"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: build (macOS)",
            "command": "clang++",
            "args": [
                "${workspaceFolder}/main.cpp",
                "${workspaceFolder}/src/**.cpp",
                "-I/opt/homebrew/Cellar/sfml/2.5.1_1/include",
                "-L/opt/homebrew/Cellar/sfml/2.5.1_1/lib",
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system",
                "-std=c++17",
                "-DMAC",
                "-O2",
                "-o",
                "${workspaceFolder}/main"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Build for macOS and optimize."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: build (Linux)",
            "command": "g++",
            "args": [
                "${workspaceFolder}/main.cpp",
                "${workspaceFolder}/src/**.cpp",
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system",
                "-std=c++17",
                "-O2",
                "-o",
                "${workspaceFolder}/main"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "detail": "Build for Linux and optimize."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: build (Windows)",
            "command": "g++",
            "args": [
                "${workspaceFolder}/main.cpp",
                "${workspaceFolder}/src/**.cpp",
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system",
                "-std=c++17",
                "-O2",
                "-o",
                "${workspaceFolder}/main.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "detail": "Build for Windows and optimize."
        }
    ]
}